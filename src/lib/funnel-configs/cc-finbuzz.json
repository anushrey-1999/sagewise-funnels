{
  "id": "cc-finbuzz",
  "title": "Sagewise Credit Card Quiz",
  "subtitle": "Complete the form below to receive personalized quotes.",
  "metaDescription": "Find the best credit cards of 2026 for cash back, travel rewards, 0% APR, credit building and more. Get personalized matches in seconds.",
  "finalStep": {
    "buttonText": "View My Matches",
    "loaderText": "Finding your best credit card matches...",
    "redirectTo": "/adwall/cc/finbuzz",
    "disclaimerText": "By pressing \"View My Matches\" you agree to our privacy policy and consent to have an agent from one our partners contact you by email, phone call, text/SMS message at the phone number and email you provide. Consent isn't a condition to purchase our products."
  },
  "steps": [
    {
      "id": "card-goal",
      "title": "What is your primary goal for a new card?",
      "description": "Takes less than 60 seconds",
      "fields": [
        {
          "id": "card-goal",
          "type": "radio",
          "label": "",
          "required": true,
          "redirectOnAnswer": {
            "rules": [
              {
                "whenValues": ["travel-cards"],
                "to": "https://www.mny0fw3trk.com/37SB645/8F9HD3/"
              },
              {
                "whenValues": ["cashback-cards"],
                "to": "https://www.mny0fw3trk.com/37SB645/8GND4N/"
              },
              {
                "whenValues": ["no-annual-fee-cards"],
                "to": "https://www.mny0fw3trk.com/37SB645/8J38T9/"
              },
              {
                "whenValues": ["no-interest-cards"],
                "to": "https://www.mny0fw3trk.com/37SB645/8KG5KW/"
              },
              {
                "whenValues": ["build-credit"],
                "to": "/adwall/cc/finbuzz"
              }
            ],
            "defaultTo": "/adwall/cc/finbuzz"
          },
          "options": [
            { "value": "travel-cards", "label": "Earn travel rewards" },
            { "value": "cashback-cards", "label": "Get cash back on spending" },
            { "value": "no-annual-fee-cards", "label": "Avoid annual fees" },
            { "value": "no-interest-cards", "label": "Lower my interest payments" },
            { "value": "build-credit", "label": "Build or repair my credit" }
          ]
        }
      ]
    },
    {
      "id": "credit-score",
      "title": "What is your credit score?",
      "description": "",
      "fields": [
        {
          "id": "credit-score",
          "type": "radio",
          "label": "",
          "required": true,
          "options": [
            { "value": "excellent", "label": "Excellent (720-850)" },
            { "value": "good", "label": "Good (690-719)" },
            { "value": "fair", "label": "Fair / Average (630-689)" },
            { "value": "bad", "label": "Rebuilding (350-629)" }
          ]
        }
      ]
    },
    {
      "id": "contact-info",
      "title": "Your matches are ready!",
      "description": "Enter your details to view your personalized card recommendations.",
      "fields": [
        {
          "id": "firstName",
          "type": "text",
          "label": "First name",
          "placeholder": "John",
          "required": true
        },
        {
          "id": "lastName",
          "type": "text",
          "label": "Last name",
          "placeholder": "Doe",
          "required": true
        },
        {
          "id": "email",
          "type": "email",
          "label": "Email",
          "placeholder": "john.doe@email.com",
          "required": true
        },
        {
          "id": "newsletter",
          "type": "checkbox",
          "label": "Yes, I want the Sagewise Retirement Newsletter!",
          "required": false
        }
      ]
    }
  ]
}

