{
  "id": "gold",
  "title": "Sagewise Gold Quiz",
  "subtitle": "Complete the form below to receive personalized quotes.",
  "metaDescription": "Answer a few questions to get matched with accredited gold dealers.",
  "finalStep": {
    "buttonText": "See Instant Matches",
    "loaderText": "Match Engine Searching... Searching 40+ accredited Gold dealers for your fit.",
    "redirectTo": "/adwall/gold/one",
    "disclaimerText": "By pressing \"See Instant Matches\" you agree to our privacy policy and consent to have an agent from one our partners contact you by email, phone call, text/SMS message at the phone number and email you provide. Consent isn't a condition to purchase our products."
  },
  "steps": [
    {
      "id": "ira-balance",
      "title": "What is your estimated IRA/401(k) balance?",
      "description": "Balances over $50k typically qualify for 10 years of zero fees.",
      "fields": [
        {
          "id": "iraBalance",
          "type": "radio",
          "label": "",
          "required": true,
          "options": [
            { "value": "50k-100k", "label": "$50k - $100k" },
            { "value": "100k-250k", "label": "$100k - $250k" },
            { "value": "250k-plus", "label": "$250k+" },
            { "value": "under-50k", "label": "Under $50k" }
          ]
        }
      ]
    },
    {
      "id": "initial-investment",
      "title": "How much would you consider investing initially?",
      "description": "Helps us determine your eligibility for premium silver bonuses.",
      "skipIf": {
        "checkStepId": "ira-balance",
        "checkFieldId": "iraBalance",
        "whenValues": ["under-50k"]
      },
      "fields": [
        {
          "id": "initialInvestment",
          "type": "radio",
          "label": "",
          "required": true,
          "options": [
            { "value": "10k-39999", "label": "$10,000 - $39,999" },
            { "value": "40k-69999", "label": "$40,000 - $69,999" },
            { "value": "70k-99999", "label": "$70,000 - $99,999" },
            { "value": "100k-plus", "label": "$100,000+" }
          ]
        }
      ]
    },
    {
      "id": "has-retirement-account",
      "title": "Do you currently have a retirement account to protect?",
      "description": "Unlocks tax-free rollover options to safeguard your nest egg.",
      "skipIf": {
        "checkStepId": "ira-balance",
        "checkFieldId": "iraBalance",
        "whenValues": ["50k-100k", "100k-250k", "250k-plus"]
      },
      "fields": [
        {
          "id": "hasRetirementAccount",
          "type": "radio",
          "label": "",
          "required": true,
          "options": [
            { "value": "yes", "label": "Yes" },
            { "value": "no", "label": "No" }
          ]
        }
      ]
    },
    {
      "id": "primary-concern",
      "title": "What is your primary financial concern?",
      "description": "Helps our specialists select the right metals for your strategy.",
      "fields": [
        {
          "id": "primaryConcern",
          "type": "radio",
          "label": "",
          "required": true,
          "options": [
            { "value": "inflation", "label": "Inflation/Cost of Living" },
            { "value": "market-crash", "label": "Market Crash" },
            { "value": "dollar-devaluation", "label": "Dollar Devaluation" },
            { "value": "tax-efficiency", "label": "Tax Efficiency" }
          ]
        }
      ]
    },
    {
      "id": "retirement-timeline",
      "title": "When do you plan to retire?",
      "description": "Your timeframe determines the recommended mix of gold vs. silver.",
      "fields": [
        {
          "id": "retirementTimeline",
          "type": "radio",
          "label": "",
          "required": true,
          "options": [
            { "value": "already-retired", "label": "Already retired" },
            { "value": "1-5", "label": "1 - 5 years" },
            { "value": "5-plus", "label": "5+ years" }
          ]
        }
      ]
    },
    {
      "id": "monthly-income",
      "title": "What's your monthly take-home income?",
      "description": "Total combined from all sources (Social Security, Pension, etc.).",
      "fields": [
        {
          "id": "monthlyIncome",
          "type": "dropdown",
          "label": "",
          "required": true,
          "options": [
            { "value": "under-2500", "label": "Under $2,500" },
            { "value": "2500-4999", "label": "$2,500 - $4,999" },
            { "value": "5000-plus", "label": "$5,000+" }
          ]
        }
      ]
    },
    {
      "id": "contact-info",
      "title": "Ready for your expert kit and 2026 Gold Guide?",
      "description": "Your data is safe, secure, and encrypted.",
      "fields": [
        {
          "id": "firstName",
          "type": "text",
          "label": "First name",
          "placeholder": "John",
          "required": true
        },
        {
          "id": "lastName",
          "type": "text",
          "label": "Last name",
          "placeholder": "Doe",
          "required": true
        },
        {
          "id": "email",
          "type": "email",
          "label": "Email",
          "placeholder": "john.doe@email.com",
          "required": true
        },
        {
          "id": "phone",
          "type": "tel",
          "label": "Phone",
          "placeholder": "(555) 555-5555",
          "required": true
        }
      ]
    }
  ]
}
